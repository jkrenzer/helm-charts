{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Lint charts",
            "type": "shell",
            "command": "ct lint --lint-conf .ct/lintconfig.yaml "
        },
        {
            "label": "Ensure directories",
            "type": "shell",
            "command": "bash bin/ensure-data-dirs"
        },
        {
            "label": "Lint, install and test charts",
            "type": "shell",
            "command": "ct lint-and-install --lint-conf .ct/lintconfig.yaml --excluded-charts common-library --helm-extra-set-args \"--set=storage.hosts={docker-desktop} --set=storage.local.basePath=/run/desktop/mnt/host/wsl/data\""
        }
    ]
}