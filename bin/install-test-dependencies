#!/bin/bash -e
if [ ! -z "$WORKSPACE_DIR" ];
then
helm install \
  cert-manager jetstack/cert-manager \
  --namespace cert-manager \
  --create-namespace \
  --version v1.16.1 \
  --set crds.enabled=true
kubectl apply -f ${WORKSPACE_DIR}/test/deps/storageClass.yaml
exit 0;
else
echo "\$WORKSPACE_DIR must be set first!"
exit 1;
fi